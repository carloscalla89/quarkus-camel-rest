<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Properties>
        <Property name="appName" value="quarkus-camel-rest"/>
    </Properties>
    <Appenders>
        <!-- Appender para la consola -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="******* %d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level [%c{1.}] (%t) - %m%n"/>
        </Console>
    </Appenders>

    <Loggers>
        <!-- Loggers de Camel con nivel INFO (útil para ver rutas, procesadores, errores) -->
        <Logger name="org.apache.camel" level="INFO" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>

        <!-- Logger para tus clases -->
        <Logger name="com.demo" level="DEBUG" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>

        <!-- Configuración global -->
        <Root level="INFO">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>
